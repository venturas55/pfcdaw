<div class="container p-4">
    <div class="row">
        <div class="col-md-5 mx-auto">
            <form action="/aton/upload/{{nif}}" method="POST" enctype="multipart/form-data">
                <input type="hidden" name="nif" value="{{nif}}">
                <div class="input-group mb-3">
                    <input type="file" class="form-control" id="inputGroupFile02" name="imagen">
                    <button type="submit" class=" btn btn-primary btn-block">Subir</button>
                </div>
            </form>
        </div>

        <div class="col-md-3 mx-auto">
            <a href="/aton/plantilla/{{nif}}" class="btn btn-primary btn-block"> Volver atras</a>
        </div>
    </div>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        {{#each fotos}}
        <div class="col">
            <div class="card m-2">
                <a href="/img/imagenes/{{../nif}}/{{this}}" target="_blank">
                    <img src="/img/imagenes/{{../nif}}/{{this}}" alt="Una imagen" class="card-img-top rounded">
                </a>
                <p>{{this}}</p>
                <div class="card-body text-center">
                    <a href="/img/imagenes/{{../nif}}/{{this}}" target="_blank" class="btn btn-primary btn-block mx-3"> Ver
                        Foto</a>
                    <a href="/aton/fotos/{{../nif}}/{{this}}/delete" class="btn btn-danger btn-block mx-3">
                        Delete</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>