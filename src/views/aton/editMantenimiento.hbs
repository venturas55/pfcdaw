<h1 class="text-center">Cambios en el mantenimiento del AtoN con NIF: {{mant.nif}}</h1>
<div class="container p-4 mb-4">
    <div class="row">
        <div class="col-md-12 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/aton/mantenimiento/edit/{{mant.id_mantenimiento}}" method="POST">
                        <div class="form-group">
                            <div class="form-group"><label for="mantenimiento">MANTENIMIENTO A MODIFICAR</label></div>
                            <input value="{{mant.id_mantenimiento}}" type="hidden" name="id_mantenimiento" />
                            <input value="{{mant.nif}}" type="hidden" name="nif" />
                            <input type="date" value="{{formatearEn mant.fecha}}" class="form-control" name="fechaNueva"
                                required />
                            <input value="{{mant.mantenimiento}}" class="form-control" type="text"
                                name="mantenimientoNuevo" placeholder="Mantenimiento a modificar" required />
                        </div>
                        <button class="btn btn-success btn-block">Guardar</button>
                    </form>
                    <form action="/aton/plantilla/{{baliza.nif}}" method="GET">
                        <button class="btn btn-danger btn-block">Cancelar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>