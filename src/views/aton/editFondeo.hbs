<h1 class="text-center mb-4">
    Cambios en fondeo de la boya <span class="text-muted">NIF {{baliza.nif}}</span>
</h1>

<div class="container mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-sm">
                <div class="card-body">

                    <form action="/aton/editFondeo/{{baliza.nif}}" method="POST">

                        <!-- DIMENSIONES FLOTADOR -->
                        <h5 class="mb-3">Dimensiones del flotador (cm)</h5>
                        <div class="row mb-3">
                            <div class="col-md-3">
                                <label class="form-label">Composición</label>
                                <input class="form-control" name="composicion_flotador"
                                    value="{{baliza.composicion_flotador}}">
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">Diámetro (D)</label>
                                <input class="form-control" type="number" name="diametro_flotador"
                                    value="{{baliza.diametro_flotador}}">
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">Altura (h)</label>
                                <input class="form-control" type="number" name="altura_flotador"
                                    value="{{baliza.altura_flotador}}">
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">Altura focal (af)</label>
                                <input class="form-control" type="number" name="altura_focal"
                                    value="{{baliza.altura_focal}}">
                            </div>
                        </div>

                        <!-- FONDEO -->
                        <h5 class="mb-3">Datos de fondeo</h5>
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label class="form-label">Calado (m)</label>
                                <input class="form-control" type="number" step="0.01" name="calado"
                                    value="{{baliza.calado}}">
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Longitud cadena (m)</label>
                                <input class="form-control" type="number" step="0.01" name="longitud_cadena"
                                    value="{{baliza.longitud_cadena}}">
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Ubicación</label>
                                <select class="form-select" name="ubicacion">
                                    <option value="interior" {{#when baliza.ubicacion 'eq' 'interior'
                                        }}selected{{/when}}>
                                        Aguas interiores
                                    </option>
                                    <option value="intermedio" {{#when baliza.ubicacion 'eq' 'intermedio'
                                        }}selected{{/when}}>
                                        Aguas intermedias
                                    </option>
                                    <option value="exterior" {{#when baliza.ubicacion 'eq' 'exterior'
                                        }}selected{{/when}}>
                                        Aguas exteriores
                                    </option>
                                </select>
                            </div>
                        </div>

                        <!-- DIMENSIONES MUERTO -->
                        <h5 class="mb-3">Dimensiones del muerto (cm)</h5>
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label class="form-label">Largo (L)</label>
                                <input class="form-control" type="number" step="0.01" name="l_muerto"
                                    value="{{baliza.l_muerto}}">
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Ancho (B)</label>
                                <input class="form-control" type="number" step="0.01" name="b_muerto"
                                    value="{{baliza.b_muerto}}">
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Alto (H)</label>
                                <input class="form-control" type="number" step="0.01" name="h_muerto"
                                    value="{{baliza.h_muerto}}">
                            </div>
                        </div>

                        <!-- COEFICIENTES Y ÁREAS -->
                        <h5 class="mb-3">Coeficientes y áreas</h5>
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label class="form-label">Diámetro cadena (mm)</label>
                                <input class="form-control" name="diametro_cadena" value="{{baliza.diametro_cadena}}">
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Área viento (m²)</label>
                                <input class="form-control" type="number" step="0.01" name="area_total_viva"
                                    value="{{baliza.area_total_viva}}">
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Cw aerodinámico</label>
                                <input class="form-control" type="number" step="0.001" name="Cw_aerodinamico"
                                    value="{{baliza.Cw_aerodinamico}}">
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">Área sumergida (m²)</label>
                                <input class="form-control" type="number" step="0.01" name="area_total_muerta"
                                    value="{{baliza.area_total_muerta}}">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Cd hidrodinámico</label>
                                <input class="form-control" type="number" step="0.001" name="Cd_aerodinamico"
                                    value="{{baliza.Cd_aerodinamico}}">
                            </div>
                        </div>

                        <!-- OBSERVACIONES -->
                        <div class="mb-4">
                            <label class="form-label">Observaciones</label>
                            <textarea class="form-control" rows="3"
                                name="observaciones">{{baliza.observaciones}}</textarea>
                        </div>

                        <!-- BOTONES -->
                        <div class="d-flex justify-content-between">
                            <a href="/aton/plantilla/{{baliza.nif}}" class="btn btn-outline-danger">
                                Cancelar
                            </a>
                            <button class="btn btn-success">
                                Guardar cambios
                            </button>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>