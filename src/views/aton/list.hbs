<div class="container-fluid p-4 mb-3">
  <div class="my-2">
    <input class="form-control" id="myInput" type="text" placeholder="Filtrar por.." autofocus>
  </div>
  {{#if balizas}}
  <div class="table-responsive py-4">
    <table id="listado" class="listado mx-auto w-100 table table-hover table-dark" data-search="true">
      <tr>
        <th class="m-0 p-0"> <span class="badge badge-secondary m-0 p-0">  <span class="badge badge-light m-0 p-0" >{{numtickets}}</span><i class="fa fa-exclamation-triangle m-0 p-0" aria-hidden="true"></i></span>  <span class="badge badge-secondary m-0 p-0">  <span class="badge badge-light m-0 p-0">{{numPintado}}</span><i class="fa fa-paint-brush m-0 p-0" aria-hidden="true"></i></span></th>
        <th>NIF</th>
        <th class="d-none d-sm-table-cell">Puerto</th>
        <th>Tipo</th>
        <th class="d-none d-sm-table-cell">Apariencia</th>
        <th class="d-none d-xl-table-cell">Linterna</th>
      </tr>
      {{#each balizas}}
      <tr class="fila pinchable" onclick="location.href='/aton/plantilla/{{nif}}';">
        <td class="text-end" style="min-width: 40px;"> {{#if necesita_pintado}}<i class="fa fa-paint-brush blink_me" aria-hidden="true"></i>
          {{/if}}{{#if hasTicket}}<i class="fa fa-exclamation-triangle blink_me" aria-hidden="true"></i> {{/if}}</td>
        <td style="width: 80px;" class="  text-truncate">{{nif}}</td>
        <td class="d-none d-sm-table-cell  text-truncate" style="max-width: 150px;">{{puerto}}</td>
        <td class="text-truncate"> {{tipo}} </td>
        <td class="d-none d-sm-table-cell  text-truncate" style="max-width: 100px;">{{apariencia}}</td>
        <td class="d-none d-xl-table-cell  text-truncate" style="max-width: 200px;"> {{linterna}} </td>
      </tr>
      {{/each}}
    </table>
  </div>
  {{else}}
  <div class="col-md-4-mx-auto">
    <div class="card card-body text-center">
      <tr>No hay balizas guardadas <a href="/aton/add"> Crea una!</a></tr>
    </div>
  </div>
  {{/if}}
  <h1>TOTAL: <span id="suma"></span> / {{suma balizas}} </h1>
</div>