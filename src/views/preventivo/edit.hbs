<div class="container p-2 mb-4">
    {{#if preventivo.solved_at}}
    <div class="alert alert-success text-center" role="alert">
        <strong>Este preventivo est√° cerrado</strong> ({{formatearEn preventivo.solved_at}})
    </div>
    <div class="row">
        <div class="col-lg-8 mx-auto py-4">
            <div class="card pb-4">
                <div class="card-header text-center">
                    <h2> Informaci√≥n del Preventivo <small class="text-muted"> {{preventivo.preventivo_id}} del AtoN
                            <a href="/aton/plantilla/{{preventivo.nif}}" class="link-primary">{{preventivo.nif}}</a>
                        </small></h2>
                </div>
                <div class="card-body pb-2">
                    {{>preventivoDisabled}}
                </div>
                <div class="text-center">
                    <a class="btn btn-outline-secondary m-2" href="/mantenimientopreventivo/list"> ‚Ü©Ô∏è Volver</a>
                </div>
            </div>
        </div>
        <div class="text-center">
        <a class="btn btn-outline-warning btn-sm m-2 mt-4"
            onclick='abreModalReabrirPrev({{preventivo.preventivo_id}},{{ preventivo.nif }})'> üõü Reabrir</a>
            </div>
        <hr>
        <a class="btn btn-outline-danger btn-sm m-2 mt-4"
            onclick="document.getElementById('myModalBorradoPreventivo').style.display = 'block';"> üóëÔ∏è Borrar</a>
    </div>
    {{else}}
    <div class="alert alert-info text-center" role="alert">
        <strong>Est√°s editando un preventivo en curso.</strong>
    </div>
    <div class="row">
        <div class="col-lg-8 mx-auto py-4">
            <div class="card pb-4">
                <div class="card-header text-center">
                    <h2> Edici√≥n del Preventivo <small class="text-muted">{{preventivo.preventivo_id}} del AtoN <a
                                href="/aton/plantilla/{{preventivo.nif}}" class="link-primary"> {{preventivo.nif}}
                            </a></small></h2>
                </div>
                <div class="card-body pb-2">
                    <form action="/mantenimientopreventivo/edit/{{preventivo.preventivo_id}}" method="POST"
                        enctype="multipart/form-data">
                        <input type="hidden" name="nif" value="{{preventivo.nif}}" />
                        <input type="hidden" name="preventivo_id" value="{{preventivo.preventivo_id}}" />
                        <label for="fecha">Fecha Revisi√≥n</label> <input type="date" name="fecha"
                            value="{{formatearEn preventivo.fecha}}" required />

                        {{>preventivoEdit}}
                        <div class="d-grid gap-2">
                            <button class="btn btn-primary" type="submit" name="accion" value="Guardar">üíæ Guardar
                                cambios</button>
                            <button
                                onclick="document.getElementById('myModalCerrarPreventivo').style.display = 'block';"
                                class="btn btn-warning">‚úÖ Cerrar
                                Preventivo</button>
                        </div>
                        <div class="text-center mt-3">
                            <a class="btn btn-outline-secondary" href="/mantenimientopreventivo/list">‚Ü©Ô∏è Cancelar</a>
                        </div>
                        {{>ModalCerrarPreventivo}}
                    </form>
                </div>
            </div>
        </div>
    </div>
    {{/if}}
</div>

