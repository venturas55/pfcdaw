<div class="container p-4 mb-4">
  <div class="row my-4">
    <div class="col-md-4 mx-auto mb-4">
      <div class="card text-center">
        <div class="card-header">
          NO RECUERDAS TU CONTRASEÑA
        </div>
        <div class="card-body">
          <img src="/img/icon-menu-autoridad.svg" alt="reloj" class="card-img-top mx-auto m-4 rounder-circle w-50">
          <p>Introduza su usuario y email</p>
          <form action="/profile/email/recordarpass" method="POST">

            <div class="form-group mb-4">
              <input type="text" name="usuario" placeholder="Usuario" class="form-control" autofocus />
            </div>
            <div class="form-group mb-4">
              <input type="email" name="email" placeholder="e-mail" class="form-control" />
            </div>
            <div class="form-group mb-4">
              <button class="btn btn-success btn-block" onclick='document.getElementById("mensaje").innerHTML="Se está enviando correo, en breve será redirigido"'>
                RESTABLECER CONTRASEÑA
              </button>
            </div>
            <div class="form-group mb-4">
              <p id="mensaje"> </p>
              </p>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>