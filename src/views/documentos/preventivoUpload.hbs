<!-- CUERPO -->
<div class="container-fluid">
    <!-- id="cuerpo" -->
    <h1 class="col-2 mx-auto">PREVENTIVOS</h1>
    <div class="row">
        <div class="col-5 mx-auto">
            <div class="table-responsive">
                <div>
                    <h3>Subir nuevo documento</h3>
                    <form action="/preventivos" method="POST" enctype="multipart/form-data">
                        <div class="form-group"><label for="altura">Nombre Documento</label><input class="form-control"
                                type="text" name="nombre" placeholder="nombre" autofocus /> </div>
                        <div class="form-group"><label for="altura">Descripcion Documento</label><input
                                class="form-control" type="text" name="descripcion" placeholder="descripcion" /> </div>

                        <div class="input-group mb-3">
                            <div class="custom-file">
                                
                                <input type="file" name="documento" class="custom-file-input" id="inputGroupFile02">
                                <label class="custom-file-label" for="inputGroupFile02">Choose file</label>
                            </div>
                            <div class="input-group-append">
                                <button type="submit" class="input-group-text">Upload</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>